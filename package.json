{
  "name": "oauth2-client-worker",
  "version": "0.0.0",
  "description": "OAuth 2 Client implementation for Service Workers",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justin-tay/oauth2-client-worker.git"
  },
  "author": "Justin Tay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justin-tay/oauth2-client-worker/issues"
  },
  "homepage": "https://github.com/justin-tay/oauth2-client-worker",
  "devDependencies": {
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "complexity": [
        "warn",
        20
      ],
      "no-console": "off"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false
  }
}
